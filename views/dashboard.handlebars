<h4>Logged In!</h4>


Your username: {{name}}

<!-- Display all posts by logged-in user, if any exist! -->
  {{#if posts.length}}
  <div class="col-md-6">
    <h3>Posts:</h3>

    {{#each posts as |post|}}
    <a href="/dashboard/post/{{post.id}}">
    <div class="row mb-2">
      <div class="col-md-8">
        <h4>{{post.name}}</h4>
        <p> {{post.description}}</p>
      </div>

    </div>
    </a>
    {{/each}}
  </div>
  {{/if}}

<div class="new-post">
 <a href="/newpost">
 <button class="btn btn-primary" type="button">New Post</button>
 </a>
</div>

