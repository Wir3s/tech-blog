<div class="mx-5">

      <form class="form update-form">
      <div class="form-group">
        <label for="name-post">Title:</label>
        <textarea class="form-input" type="text" id="name-post">{{name}}</textarea>
      </div>
      <div class="form-group">
        <label for="content-post">Post:</label>
        <textarea class="form-input" type="text" id="content-post">{{description}}</textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" data-id="{{id}}">Update Post</button>
      </div>
    </div>

  <div class="col-md-4 del-post">
    <button class="btn btn-sm btn-danger" data-id="{{id}}">Delete Post</button>
</form>
</div>



<script src="/js/updatepost.js"></script>
<script src="/js/deletepost.js"></script>
